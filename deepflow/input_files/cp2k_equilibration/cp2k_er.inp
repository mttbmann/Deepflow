&GLOBAL
  PROJECT {cp2k_equilibrium}
  RUN_TYPE MD
  PRINT_LEVEL MEDIUM 
&END GLOBAL

&FORCE_EVAL
  METHOD QS
  &DFT
    &LS_SCF
      EXTRAPOLATION_ORDER 3
    &END LS_SCF
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 280
      REL_CUTOFF 40
      NGRIDS 5
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-12
      EXTRAPOLATION_ORDER 3
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      &OT ON
        MINIMIZER DIIS
      &END OT
      EPS_SCF      1.0E-6
      &PRINT
        &RESTART OFF
        &END
      &END
    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &vdW_POTENTIAL
         DISPERSION_FUNCTIONAL PAIR_POTENTIAL
         &PAIR_POTENTIAL
            TYPE DFTD2
            REFERENCE_FUNCTIONAL PBE
         &END PAIR_POTENTIAL
      &END vdW_POTENTIAL
    &END XC
  &END DFT
  &SUBSYS
    &CELL
      ABC LATTICE_CONSTANTS_PLACEHOLDER
      ALPHA_BETA_GAMMA LATTICE_ANGLES_PLACEHOLDER
    &END CELL
    &TOPOLOGY
      COORD_FILE_NAME {mod_nvt_inp.xyz/pdb}
      COORDINATE {XYZ/PDB}
    &END TOPOLOGY
    {KIND}
  &END SUBSYS
  #STRESS_TENSOR ANALYTICAL
  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
&END FORCE_EVAL

&MOTION
  &PRINT
    &TRAJECTORY
      FORMAT PDB
      &EACH
        MD 1
      &END EACH
    &END TRAJECTORY
    &VELOCITIES
      FORMAT XYZ
      &EACH
        MD 1
      &END EACH
    &END VELOCITIES
    &FORCES
      FORMAT XYZ
      &EACH
        MD 1
      &END EACH
      FILENAME forces
    &END FORCES
  &END PRINT
  &MD
    ENSEMBLE NVT
    TIMESTEP [fs] 0.5
    STEPS    EQUILIBRATION_STEPS_PLACEHOLDER
    TEMPERATURE TEMPERATURE_PLACEHOLDER
    &THERMOSTAT
      REGION GLOBAL
      TYPE CSVR
      &CSVR
        TIMECON [fs] 10
      &END CSVR
      &PRINT
        &TEMPERATURE
          &EACH
            MD 1
          &END EACH
        &END TEMPERATURE
      &END PRINT
    &END THERMOSTAT
  &END MD
&END MOTION

#&EXT_RESTART
# EXTERNAL_FILE mat-1_10000.restart
#&END EXT_RESTART
